<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#50000000" /> <!-- Shadow color -->
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- Main button layer -->
    <item android:left="0dp" android:top="-4dp" android:right="0dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorButtonBackground" /> <!-- Main button color -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>
