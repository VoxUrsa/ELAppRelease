<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Main button layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/greyCC" /> <!-- Main button color -->
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- Inner shadow to create a recessed effect -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:centerColor="#30000000"
                android:endColor="@android:color/transparent"
                android:startColor="#30000000" />
            <corners android:radius="6dp" />
        </shape>
    </item>
</layer-list>
