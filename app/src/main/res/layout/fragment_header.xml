<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="start"
        android:orientation="horizontal"
        android:padding="0dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="185dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:gravity="start"
            app:srcCompat="?attr/logoDrawable" />

        <Button
            android:id="@+id/memberButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="?attr/colorButtonText"
            android:backgroundTint="?attr/colorButtonBackground"
            android:drawableTint="?attr/colorButtonText"
            android:drawableLeft="@drawable/groups"
            android:drawablePadding="8dp"
            android:text="Member"
            android:padding="8dp"/>
    </RelativeLayout>

</RelativeLayout>
