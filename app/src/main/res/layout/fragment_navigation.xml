<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Navigation items -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:gravity="start"
        android:orientation="horizontal"
        android:elevation="10dp"
        android:paddingTop="@dimen/spacingMain">

        <ImageView
            android:id="@+id/imageViewHome"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_weight=".25"
            android:background="@color/primaryMed"
            android:padding="10dp"
            app:srcCompat="@drawable/home"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/imageViewPets"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_weight=".25"
            android:background="@color/white"
            android:padding="10dp"
            app:srcCompat="@drawable/pets"
            app:tint="@color/grey99" />

        <ImageView
            android:id="@+id/imageViewNotifications"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_weight=".25"
            android:background="@color/white"
            android:padding="10dp"
            app:srcCompat="@drawable/notifications"
            app:tint="@color/grey99" />

        <ImageView
            android:id="@+id/imageViewSettings"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_weight=".25"
            android:background="@color/white"
            android:padding="10dp"
            app:srcCompat="@drawable/settings"
            app:tint="@color/grey99" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/primaryMed"
        android:elevation="10dp" />

    <!-- Title Header with CardView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/titleHeaderContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-18dp"
        android:layout_marginHorizontal="-8dp"
    android:elevation="20dp"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="?attr/colorSurface"
    app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/settingsHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settingsHeader"
                android:textColor="?attr/colorPrimaryText"
                android:textSize="26sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    </LinearLayout>
