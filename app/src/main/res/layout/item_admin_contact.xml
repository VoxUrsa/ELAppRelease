<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="70dp">

    <!-- Title for Admin Contact -->
    <TextView
        android:id="@+id/adminContactTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:text="@string/admin_contact_title"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="?attr/colorPrimaryText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- First Name -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/firstNameCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true"
        app:strokeWidth="1dp"
        app:strokeColor="?attr/colorCardStroke"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/adminContactTitle"
        app:layout_constraintWidth_max="488dp">

        <EditText
            android:id="@+id/adminFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="given-name"
            android:inputType="textPersonName"
            android:hint="@string/first_name_hint"
            android:padding="12dp"
            android:background="?attr/colorInputBackground"
            android:textColor="?attr/colorInputText"
            android:textColorHint="?attr/colorInputTextHint"
            android:textSize="16sp" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Last Name -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/lastNameCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true"
        app:strokeWidth="1dp"
        app:strokeColor="?attr/colorCardStroke"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/firstNameCard"
        app:layout_constraintWidth_max="488dp">

        <EditText
            android:id="@+id/adminLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="family-name"
            android:inputType="textPersonName"
            android:hint="@string/last_name_hint"
            android:padding="12dp"
            android:background="?attr/colorInputBackground"
            android:textColor="?attr/colorInputText"
            android:textColorHint="?attr/colorInputTextHint"
            android:textSize="16sp" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Cell Phone -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cellPhoneCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true"
        app:strokeWidth="1dp"
        app:strokeColor="?attr/colorCardStroke"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lastNameCard"
        app:layout_constraintWidth_max="488dp">

        <EditText
            android:id="@+id/adminCellPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="tel"
            android:inputType="phone"
            android:hint="@string/cell_phone_hint"
            android:padding="12dp"
            android:background="?attr/colorInputBackground"
            android:textColor="?attr/colorInputText"
            android:textColorHint="?attr/colorInputTextHint"
            android:textSize="16sp" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Email -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/emailCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true"
        app:strokeWidth="1dp"
        app:strokeColor="?attr/colorCardStroke"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cellPhoneCard"
        app:layout_constraintWidth_max="488dp">

        <EditText
            android:id="@+id/adminEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="emailAddress"
            android:inputType="textEmailAddress"
            android:hint="@string/email_hint"
            android:padding="12dp"
            android:background="?attr/colorInputBackground"
            android:textColor="?attr/colorInputText"
            android:textColorHint="?attr/colorInputTextHint"
            android:textSize="16sp" />
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
