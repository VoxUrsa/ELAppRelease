<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorTabHeaderBackground">

    <!-- Tab-like view -->
    <View
        android:id="@+id/tabView"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/tab_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.65" />

    <!-- Background with curved top corners -->
    <LinearLayout
        android:id="@+id/staticContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/curved_top_background"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/tabView">

        <!-- Title and Chevron Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/registerPetTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/my_contacts"
                android:textColor="?attr/colorPrimaryText"
                android:textSize="26sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/chevronLeft"
                android:layout_width="@dimen/spacingList"
                android:layout_height="@dimen/spacingList"
                android:contentDescription="@string/chevron_left"
                android:src="@drawable/ic_chevron_left"
                app:tint="?attr/colorChevron" />
        </LinearLayout>

        <!-- Horizontal Rule -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?attr/colorChevron" />
    </LinearLayout>

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="?attr/colorTabBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/staticContainer">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="70dp">

            <!-- Caretaker Contact Details -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="@string/caretaker_contact"
                android:textColor="?attr/colorPrimaryText"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Caretaker First Name Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/hint_first_name"
                android:textColor="?attr/colorPrimaryText"
                android:textSize="16sp" />

            <!-- Caretaker First Name -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true"
                app:strokeColor="?attr/colorCardStroke"
                app:strokeWidth="1dp">

                <EditText
                    android:id="@+id/cc_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="autofill_firstName"
                    android:background="?attr/colorInputBackground"
                    android:hint="@string/hint_first_name"
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    android:padding="12dp"
                    android:textColor="?attr/colorInputText"
                    android:textColorHint="?attr/colorInputTextHint"
                    android:textSize="16sp" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Caretaker Last Name Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/hint_last_name"
                android:textColor="?attr/colorPrimaryText"
                android:textSize="16sp" />

            <!-- Caretaker Last Name -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true"
                app:strokeColor="?attr/colorCardStroke"
                app:strokeWidth="1dp">

                <EditText
                    android:id="@+id/cc_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="autofill_lastName"
                    android:background="?attr/colorInputBackground"
                    android:hint="@string/hint_last_name"
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    android:padding="12dp"
                    android:textColor="?attr/colorInputText"
                    android:textColorHint="?attr/colorInputTextHint"
                    android:textSize="16sp" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Caretaker Cell Phone Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/hint_cell_phone"
                android:textColor="?attr/colorPrimaryText"
                android:textSize="16sp" />

            <!-- Caretaker Cell Phone -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true"
                app:strokeColor="?attr/colorCardStroke"
                app:strokeWidth="1dp">

                <EditText
                    android:id="@+id/cc_cell"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="autofill_phoneNumber"
                    android:background="?attr/colorInputBackground"
                    android:hint="@string/hint_cell_phone"
                    android:inputType="phone"
                    android:minHeight="48dp"
                    android:padding="12dp"
                    android:textColor="?attr/colorInputText"
                    android:textColorHint="?attr/colorInputTextHint"
                    android:textSize="16sp" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Caretaker Email Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/hint_email"
                android:textColor="?attr/colorPrimaryText"
                android:textSize="16sp" />

            <!-- Caretaker Email -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true"
                app:strokeColor="?attr/colorCardStroke"
                app:strokeWidth="1dp">

                <EditText
                    android:id="@+id/cc_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="autofill_emailAddress"
                    android:background="?attr/colorInputBackground"
                    android:hint="@string/hint_email"
                    android:inputType="textEmailAddress"
                    android:minHeight="48dp"
                    android:padding="12dp"
                    android:textColor="?attr/colorInputText"
                    android:textColorHint="?attr/colorInputTextHint"
                    android:textSize="16sp" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Caretaker Holiday Mode Start Title -->
            <TextView
                android:id="@+id/cc_hm_start_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/hint_holiday_mode_start"
                android:textColor="?attr/colorPrimaryText"
                android:textSize="16sp"
                android:visibility="gone"/>

            <!-- Caretaker Holiday Mode Start Date -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true"
                app:strokeColor="?attr/colorCardStroke"
                app:strokeWidth="1dp">

                <EditText
                    android:id="@+id/cc_hm_start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/colorInputBackground"
                    android:clickable="true"
                    android:focusable="false"
                    android:hint="@string/hint_holiday_mode_start"
                    android:inputType="none"
                    android:minHeight="48dp"
                    android:padding="12dp"
                    android:textColor="?attr/colorInputText"
                    android:textColorHint="?attr/colorInputTextHint"
                    android:textSize="16sp"
                    android:visibility="gone"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Caretaker Holiday Mode End Title -->
            <TextView
                android:id="@+id/cc_hm_end_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/hint_holiday_mode_end"
                android:textColor="?attr/colorPrimaryText"
                android:textSize="16sp"
                android:visibility="gone"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true"
                app:strokeColor="?attr/colorCardStroke"
                app:strokeWidth="1dp">

                <EditText
                    android:id="@+id/cc_hm_end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/colorInputBackground"
                    android:clickable="true"
                    android:focusable="false"
                    android:hint="@string/hint_holiday_mode_end"
                    android:inputType="none"
                    android:minHeight="48dp"
                    android:padding="12dp"
                    android:textColor="?attr/colorInputText"
                    android:textColorHint="?attr/colorInputTextHint"
                    android:textSize="16sp"
                    android:visibility="gone"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Emergency Contacts Header -->
            <TextView
                android:id="@+id/emergencyContactsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"
                android:text="@string/emergency_contacts"
                android:textColor="?attr/colorPrimaryText"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="gone"/>

            <!-- Emergency Contacts Placeholder -->
            <LinearLayout
                android:id="@+id/emergencyContactsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- Dynamically add fields here based on subscription level -->
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Cancel and Save Button -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacingMain"
        android:background="?attr/colorTabBackground"
        android:gravity="start"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Cancel Button -->
        <Button
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/red"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <View
            android:layout_width="40dp"
            android:layout_height="match_parent" />

        <!-- Save Button -->
        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:backgroundTint="?attr/colorButtonBackground"
            android:text="@string/save"
            android:textSize="24sp" />
    </LinearLayout>

    <!-- Dim Overlay for blur effect -->
    <View
        android:id="@+id/dimOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone" />

    <!-- Progress Bar for loading -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
