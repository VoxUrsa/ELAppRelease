                    android:minHeight="48dp"
                    android:padding="12dp"
                    android:textColor="?attr/colorInputText"
                    android:textColorHint="?attr/colorInputTextHint"
                    android:textSize="16sp" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Billing Email -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true"
                app:strokeColor="?attr/colorCardStroke"
                app:strokeWidth="1dp">

                <EditText
                    android:id="@+id/billingEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="autofill_emailAddress"
                    android:background="?attr/colorInputBackground"
                    android:hint="@string/hint_email"
                    android:inputType="textEmailAddress"
                    android:minHeight="48dp"
                    android:padding="12dp"
                    android:textColor="?attr/colorInputText"
                    android:textColorHint="?attr/colorInputTextHint"
                    android:textSize="16sp" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Shipping Address Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"
                android:text="@string/shipping_address"
                android:textColor="?attr/colorPrimaryText"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Shipping First Name -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true"
                app:strokeColor="?attr/colorCardStroke"
                app:strokeWidth="1dp">

                <EditText
                    android:id="@+id/shippingFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="autofill_firstName"
                    android:background="?attr/colorInputBackground"
                    android:hint="@string/hint_first_name"
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    android:padding="12dp"
                    android:textColor="?attr/colorInputText"
                    android:textColorHint="?attr/colorInputTextHint"
                    android:textSize="16sp" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Shipping Last Name -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true"
                app:strokeColor="?attr/colorCardStroke"
                app:strokeWidth="1dp">

                <EditText
                    android:id="@+id/shippingLastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="autofill_lastName"
                    android:background="?attr/colorInputBackground"
                    android:hint="@string/hint_last_name"
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    android:padding="12dp"
                    android:textColor="?attr/colorInputText"
                    android:textColorHint="?attr/colorInputTextHint"
                    android:textSize="16sp" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Shipping Company -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true"
                app:strokeColor="?attr/colorCardStroke"
                app:strokeWidth="1dp">

                <EditText
                    android:id="@+id/shippingCompany"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="autofill_lastName"
                    android:background="?attr/colorInputBackground"
                    android:hint="@string/hint_company"
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    android:padding="12dp"
                    android:textColor="?attr/colorInputText"
                    android:textColorHint="?attr/colorInputTextHint"
                    android:textSize="16sp" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Shipping Address Line 1 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true"
                app:strokeColor="?attr/colorCardStroke"
                app:strokeWidth="1dp">

                <EditText
                    android:id="@+id/shippingAddress1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="autofill_postalAddress"
                    android:background="?attr/colorInputBackground"
                    android:hint="@string/hint_address_line_1"
                    android:inputType="textPostalAddress"
                    android:minHeight="48dp"
                    android:padding="12dp"
                    android:textColor="?attr/colorInputText"
                    android:textColorHint="?attr/colorInputTextHint"
                    android:textSize="16sp" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Shipping Address Line 2 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true"
                app:strokeColor="?attr/colorCardStroke"
                app:strokeWidth="1dp">

                <EditText
                    android:id="@+id/shippingAddress2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="autofill_postalAddress"
                    android:background="?attr/colorInputBackground"
                    android:hint="@string/hint_address_line_2"
                    android:inputType="textPostalAddress"
                    android:minHeight="48dp"
                    android:padding="12dp"
                    android:textColor="?attr/colorInputText"
                    android:textColorHint="?attr/colorInputTextHint"
                    android:textSize="16sp" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Shipping City -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true"
                app:strokeColor="?attr/colorCardStroke"
                app:strokeWidth="1dp">

                <EditText
                    android:id="@+id/shippingCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="autofill_city"
                    android:background="?attr/colorInputBackground"
                    android:hint="@string/hint_city"
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:padding="12dp"
                    android:textColor="?attr/colorInputText"
                    android:textColorHint="?attr/colorInputTextHint"
                    android:textSize="16sp" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Shipping State -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true"
                app:strokeColor="?attr/colorCardStroke"
                app:strokeWidth="1dp">

                <EditText
                    android:id="@+id/shippingState"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="autofill_state"
                    android:background="?attr/colorInputBackground"
                    android:hint="@string/hint_state"
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:padding="12dp"
                    android:textColor="?attr/colorInputText"
                    android:textColorHint="?attr/colorInputTextHint"
                    android:textSize="16sp" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Shipping Postcode -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true"
                app:strokeColor="?attr/colorCardStroke"
                app:strokeWidth="1dp">

                <EditText
                    android:id="@+id/shippingZip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="autofill_postalCode"
                    android:background="?attr/colorInputBackground"
                    android:hint="@string/hint_postcode"
                    android:inputType="number"
                    android:minHeight="48dp"
                    android:padding="12dp"
                    android:textColor="?attr/colorInputText"
                    android:textColorHint="?attr/colorInputTextHint"
                    android:textSize="16sp" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Shipping Phone -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true"
                app:strokeColor="?attr/colorCardStroke"
                app:strokeWidth="1dp">

                <EditText
                    android:id="@+id/shippingPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="autofill_phoneNumber"
                    android:background="?attr/colorInputBackground"
                    android:hint="@string/hint_phone"
                    android:inputType="phone"
                    android:minHeight="48dp"
                    android:padding="12dp"
                    android:textColor="?attr/colorInputText"
                    android:textColorHint="?attr/colorInputTextHint"
                    android:textSize="16sp" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Shipping Email -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true"
                app:strokeColor="?attr/colorCardStroke"
                app:strokeWidth="1dp">

                <EditText
                    android:id="@+id/shippingEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="autofill_emailAddress"
                    android:background="?attr/colorInputBackground"
                    android:hint="@string/hint_email"
                    android:inputType="textEmailAddress"
                    android:minHeight="48dp"
                    android:padding="12dp"
                    android:textColor="?attr/colorInputText"
                    android:textColorHint="?attr/colorInputTextHint"
                    android:textSize="16sp" />
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

    <!-- Cancel and Save Button -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacingMain"
        android:background="?attr/colorTabBackground"
        android:gravity="start"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/red"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <View
            android:layout_width="40dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:backgroundTint="?attr/colorButtonBackground"
            android:text="@string/save"
            android:textSize="24sp" />

    </LinearLayout>

    <!-- Progress bar for loading -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Dim overlay for blur effect -->
    <View
        android:id="@+id/dimOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>
