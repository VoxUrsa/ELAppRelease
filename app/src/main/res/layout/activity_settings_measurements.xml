<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorTabHeaderBackground">

    <!-- Tab-like view -->
    <View
        android:id="@+id/tabView"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:background="@drawable/tab_background"
        app:layout_constraintWidth_percent="0.65"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="2dp"/>

    <!-- Background with curved top corners, placed below the tab -->
    <LinearLayout
        android:id="@+id/staticContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/curved_top_background"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tabView">

        <!-- Title and Chevron Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/measurementTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Measurements"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimaryText"/>

            <ImageView
                android:id="@+id/chevronLeft"
                android:layout_width="@dimen/spacingList"
                android:layout_height="@dimen/spacingList"
                android:src="@drawable/ic_chevron_left"
                android:contentDescription="Back"
                app:tint="?attr/colorChevron" />
        </LinearLayout>

        <!-- Horizontal Rule -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?attr/colorChevron" />

    </LinearLayout>

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="?attr/colorTabBackground"
        app:layout_constraintTop_toBottomOf="@id/staticContainer"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="70dp">

            <!-- Custom Toggle Slider -->
            <FrameLayout
                android:id="@+id/sliderContainer"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:background="@drawable/slider_background"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">

                <!-- Selected Slider Background -->
                <View
                    android:id="@+id/sliderThumb"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:background="@drawable/slider_selected_background"
                    android:translationX="0dp"/>

                <!-- Text Labels in a horizontal layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Imperial Label -->
                    <LinearLayout
                        android:id="@+id/imperialContainer"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:clickable="true">

                        <TextView
                            android:id="@+id/imperialLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Imperial"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/imperialUnitLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Inches, Pounds"
                            android:textSize="14sp"
                            android:textColor="@android:color/white" />
                    </LinearLayout>

                    <!-- Metric Label -->
                    <LinearLayout
                        android:id="@+id/metricContainer"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:clickable="true">

                        <TextView
                            android:id="@+id/metricLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Metric"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/metricUnitLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CM, KG"
                            android:textSize="14sp"
                            android:textColor="@android:color/black" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

    </ScrollView>

    <!-- Cancel and Save Button -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacingMain"
        android:background="?attr/colorTabBackground"
        android:gravity="start"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/red"
            android:textSize="24sp"
            android:text="@string/cancel"
            android:textColor="@color/white"/>

        <View
            android:layout_width="40dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:backgroundTint="?attr/colorButtonBackground"
            android:text="@string/save"
            android:textSize="24sp" />

    </LinearLayout>

    <!-- Progress bar for loading -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Dim overlay for blur effect -->
    <View
        android:id="@+id/dimOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>
