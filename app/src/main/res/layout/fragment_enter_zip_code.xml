<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/enterZipCodeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_edit_fragment_background"
    android:padding="16dp">

    <!-- Close Chevron Icon -->
    <ImageView
        android:id="@+id/chevronDown"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_chevron_down"
        android:contentDescription="Close"
        android:layout_gravity="end"
        android:padding="8dp"
        app:tint="?attr/colorChevron" />

    <!-- Field Title -->
    <TextView
        android:id="@+id/enterZipCodeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Last Known Pet Zipcode"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="16dp" />

    <!-- ScrollView for Input Fields -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:id="@+id/inputContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- EditText for Zip Code Input -->
            <EditText
                android:id="@+id/zipCodeEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Zip Code"
                android:padding="16dp"
                android:background="@drawable/edit_text_background"
                android:inputType="number"
                android:maxLength="5"
                android:layout_marginTop="16dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Button Container at the Bottom -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:textSize="18sp"
            android:backgroundTint="@color/red"
            android:textColor="@android:color/white" />

        <View
            android:layout_width="16dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/continueButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Continue"
            android:textSize="18sp"
            android:backgroundTint="?attr/colorButtonBackground"
            android:textColor="@android:color/white" />

    </LinearLayout>

</LinearLayout>
 